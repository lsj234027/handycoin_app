<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true" >
        <layer-list>
            <item
                android:top="6dp"
                android:bottom="6dp"
                android:drawable="@drawable/up_arrow" />
        </layer-list>
    </item>
    <item android:state_expanded="false" >
        <layer-list>
            <item
                android:top="6dp"
                android:bottom="6dp"
                android:drawable="@drawable/down_arrow" />
        </layer-list>
    </item>
</selector>
